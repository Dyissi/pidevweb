{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block main %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
            <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">Reset Password</h1>

            {% if error %}
                <div class="bg-red-100 text-red-700 p-3 mb-4 rounded text-center">{{ error }}</div>
            {% endif %}
            {% if success %}
                <div class="bg-green-100 text-green-700 p-3 mb-4 rounded text-center">{{ success }}</div>
            {% endif %}

            <form method="post" action="{{ path('app_reset_password') }}" class="space-y-6">
                <div>
                    <label for="new_password" class="block text-sm font-medium text-gray-700 text-center">New Password</label>
                    <input type="password" name="new_password" id="new_password" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 mt-1" placeholder="Enter new password" required>
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 transition duration-200">Reset Password</button>
            </form>

            <p class="mt-6 text-center">
                <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline">Back to Login</a>
            </p>
        </div>
    </div>
{% endblock %}