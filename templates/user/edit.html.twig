{% extends 'base.html.twig' %}

{% block title %}
  Edit {% if role == 'coach' %}Coach{% elseif role == 'med_staff' %}Medical Staff{% else %}Athlete{% endif %} {{ user.userFname }} {{ user.userLname }} | SPIIN Sports
{% endblock %}
{% block description %}
  Edit {{ user.userFname }} {{ user.userLname }} in the SPIIN Sports system
{% endblock %}
{% block keywords %}
  edit {% if role == 'coach' %}coach{% elseif role == 'med_staff' %}medical staff{% else %}athlete{% endif %}, {{ user.userFname }} {{ user.userLname }}, sports, SPIIN
{% endblock %}

{% block body_class %}
  {% if role == 'coach' %}coach-edit-page{% elseif role == 'med_staff' %}med-staff-edit-page{% else %}athlete-edit-page{% endif %}
{% endblock %}

{% block main %}
  <div class="page-title" data-aos="fade">
    <div class="heading">
      <div class="container">
        <div class="row d-flex justify-content-center text-center">
          <div class="col-lg-8">
            <h1>Edit {% if role == 'coach' %}Coach{% elseif role == 'med_staff' %}Medical Staff{% else %}Athlete{% endif %}</h1>
            <p class="mb-0">Update details for {{ user.userFname }} {{ user.userLname }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="container" data-aos="fade-up">
      {{ include('user/_form.html.twig', {'button_label': 'Update', 'role': role, 'context': context}) }}
      <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_user_index', {'context': context, 'role': role}) }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left"></i> Back to List
        </a>
        {{ include('user/_delete_form.html.twig', {'context': context, 'role': role}) }}
      </div>
    </div>
  </section>
{% endblock %}