{% extends 'base.html.twig' %}

{% block title %}Edit Injury{% endblock %}

{% block hero %}
{% block body %}
<section id="edit-injury" class="py-5">
  <div class="container" data-aos="fade-up">
    <div class="section-header text-center mb-4">
      <h2>Edit Injury</h2>
      <p>Update the injury details below</p>
    </div>

    <!-- Flash messages -->
    {% for message in app.flashes('success') %}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {% endfor %}

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card p-4 shadow-sm rounded-4">
          {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
            <div class="mb-3">
              {{ form_label(form.injury_date, 'Injury Date', { 'label_attr': { 'class': 'form-label' } }) }}
              {{ form_widget(form.injury_date, { 'attr': { 'class': 'form-control' } }) }}
              {{ form_errors(form.injury_date) }}
            </div>
            <div class="mb-3">
              {{ form_label(form.injurySeverity, 'Injury Severity', { 'label_attr': { 'class': 'form-label' } }) }}
              {{ form_widget(form.injurySeverity, { 'attr': { 'class': 'form-select' } }) }}
              {{ form_errors(form.injurySeverity) }}
            </div>
            <div class="mb-3">
              {{ form_label(form.injuryDescription, 'Injury Description', { 'label_attr': { 'class': 'form-label' } }) }}
              {{ form_widget(form.injuryDescription, { 'attr': { 'class': 'form-control', 'rows': '4' } }) }}
              {{ form_errors(form.injuryDescription) }}
            </div>
            <div class="mb-3">
              {{ form_label(form.injuryType, 'Injury Type', { 'label_attr': { 'class': 'form-label' } }) }}
              {{ form_widget(form.injuryType, { 'attr': { 'class': 'form-select' } }) }}
              {{ form_errors(form.injuryType) }}
            </div>
            <div class="mb-3">
              {{ form_label(form.user, 'User', { 'label_attr': { 'class': 'form-label' } }) }}
              {{ form_widget(form.user, { 'attr': { 'class': 'form-select' } }) }}
              {{ form_errors(form.user) }}
            </div>

            <!-- Image Preview and Upload Section -->
           {% if injury.image %}
    <div class="mb-3">
        <label class="form-label">Current Image: </label>
        <img src="{{ asset('frontOffice/img/' ~ injury.image) }}" 
             class="img-thumbnail" 
             style="max-height: 200px;">
        <div class="form-check mt-2">
            <input type="checkbox" 
                   id="{{ form.deleteImage.vars.id }}" 
                   name="{{ form.deleteImage.vars.full_name }}"
                   class="form-check-input">
            <label for="{{ form.deleteImage.vars.id }}" class="form-check-label">
                Delete this image
            </label>
        </div>
    </div>
{% endif %}

              {{ form_label(form.imageFile, 'Update Injury Image', { 'label_attr': { 'class': 'form-label' } }) }}
              {{ form_widget(form.imageFile, { 'attr': { 'class': 'form-control' } }) }}
              {{ form_errors(form.imageFile) }}
              <small class="text-muted">Leave blank to keep current image. Allowed formats: JPG, PNG, GIF (Max 5MB)</small>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between flex-wrap gap-2">
              <button type="submit" class="btn btn-warning">Update Injury</button>
              <div>
                <a href="{{ path('app_injury_index') }}" class="btn btn-outline-secondary me-2">Back to List</a>
                <a href="{{ path('app_injury_show', {'id': injury.injuryId}) }}" class="btn btn-info">View Injury</a>
              </div>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
{% endblock %}