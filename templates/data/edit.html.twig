{% extends 'base.html.twig' %}

{% block title %}Edit Performance Data{% endblock %}

{% block main %}
<div class="container form-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary-dark text-tertiary-light py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0">
                            <i class="bi bi-pencil-square me-2"></i>Edit Performance Data
                        </h1>
                    </div>
                </div>

                <div class="card-body p-4">
                    {# Form #}
                    <div class="form-content">
                        {{ include('data/_form.html.twig', {
                            'button_label': 'Update',
                            'button_attr': {
                                'class': 'btn btn-accent w-100 py-2'
                            }
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}