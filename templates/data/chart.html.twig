{# templates/data/chart.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Performance Chart{% endblock %}

{% block body %}
    <div class="container">
        <h1>Performance Chart</h1>
        <div class="chart-container">
            <img src="{{ chartUrl }}" alt="Performance Chart" class="img-fluid">
        </div>
        
        <div class="mt-4">
            <a href="{{ path('app_data_index') }}" class="btn btn-secondary">
                Back to List
            </a>
            
            {# Download button #}
            <a href="{{ chartUrl }}&download=1" class="btn btn-primary ms-2">
                <i class="bi bi-download"></i> Download as PNG
            </a>
        </div>
    </div>
{% endblock %}