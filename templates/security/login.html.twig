{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block main %}
<section class="login-section">
    <div class="container">
        <h2>Login</h2>
        {% if error %}
            <div class="alert alert-danger">
                {% if error.messageKey == 'Invalid reCAPTCHA. Please try again.' %}
                    Please complete the reCAPTCHA verification.
                {% else %}
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                {% endif %}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_email }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Add reCAPTCHA widget #}
            <div class="mb-3">
                <div class="g-recaptcha" data-sitekey="{{ recaptcha_public_key }}"></div>
            </div>

            <button class="btn btn-primary" type="submit">Sign in</button>
        </form>

        <p class="mt-4 text-center">
            <a href="{{ path('app_forgot_password') }}" class="text-blue-500 hover:underline">Forgot Password?</a>
        </p>
        
    </div>
</section>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}