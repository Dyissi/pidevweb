{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

{# Session Focus - No changes #}
<div class="mb-3">
    {{ form_label(form.sessionFocus, 'Session Focus') }}
    <div class="d-flex flex-wrap gap-3">
        {% for focus in form.sessionFocus %}
            <div class="form-check">
                {{ form_widget(focus, {
                    'attr': {'class': 'form-check-input'},
                    'label_attr': {'class': 'form-check-label'}
                }) }}
                {{ form_label(focus) }}
            </div>
        {% endfor %}
    </div>
    {{ form_errors(form.sessionFocus) }}
</div>

{# Date & Time Picker - Minimal changes #}
<div class="mb-3">
    <label class="form-label">
        <i class="fas fa-calendar-alt me-2"></i> Session Date & Time
    </label>
    {{ form_widget(form.sessionStartTime, {
        'attr': {
            'class': 'form-control datetime-picker',
            'placeholder': 'Select date and time...'
        },
        'html5': false,
        'widget': 'single_text'
    }) }}
    <small class="text-muted">Example: 2023-09-15 14:30</small>
    {{ form_errors(form.sessionStartTime) }}
</div>

{# Duration - No changes #}
<div class="mb-3">
    {{ form_label(form.sessionDuration, 'Duration') }}
    <div class="d-flex flex-wrap gap-3">
        {% for duration in form.sessionDuration %}
            <div class="form-check">
                {{ form_widget(duration, {
                    'attr': {'class': 'form-check-input'},
                    'label_attr': {'class': 'form-check-label'}
                }) }}
                {{ form_label(duration) }}
            </div>
        {% endfor %}
    </div>
    {{ form_errors(form.sessionDuration) }}
</div>

{# Location - No changes #}
<div class="mb-3">
    {{ form_label(form.location, 'Location') }}
    {{ form_widget(form.location, {
        'attr': {
            'class': 'form-control',
            'placeholder': 'Select a location'
        }
    }) }}
    {{ form_errors(form.location) }}
</div>

{# Notes - No changes #}
<div class="mb-3">
    {{ form_label(form.sessionNotes, 'Notes') }}
    {{ form_widget(form.sessionNotes, {
        'attr': {
            'class': 'form-control',
            'rows': 3,
            'placeholder': 'Additional notes'
        }
    }) }}
    {{ form_errors(form.sessionNotes) }}
</div>

{# Team - No changes #}
<div class="mb-3">
    {{ form_label(form.team, 'Team') }}
    {{ form_widget(form.team) }}
</div>

{# Buttons - No changes #}
<div class="d-flex justify-content-between mt-4">
    <a href="{{ path('app_training_session_index') }}" class="btn btn-secondary">
        ‚Üê Back to List
    </a>
    <button type="submit" class="btn btn-primary">
        {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}

{# Add these at the bottom - Simple Flatpickr implementation #}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    flatpickr('.datetime-picker', {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true
    });
});
</script>

<style>
/* Simple styling for the picker */
.flatpickr-input {
    background-color: #fff;
    cursor: pointer;
}
.flatpickr-calendar {
    font-family: inherit;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}
</style>