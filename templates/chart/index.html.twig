{% extends 'base.html.twig' %}

{% block title %}Charts{% endblock %}

{% block main %}
    <div class="container py-5">
        <h1 class="mb-4">Performance Charts</h1>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Bar Chart</h5>
                    </div>
                    <div class="card-body">
                        <img src="{{ barChartUrl }}" alt="Bar Chart" class="img-fluid">
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Line Chart</h5>
                    </div>
                    <div class="card-body">
                        <img src="{{ lineChartUrl }}" alt="Line Chart" class="img-fluid">
                    </div>
                </div>
            </div>

            <div class="col-md-6 offset-md-3 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Pie Chart</h5>
                    </div>
                    <div class="card-body">
                        <img src="{{ pieChartUrl }}" alt="Pie Chart" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 