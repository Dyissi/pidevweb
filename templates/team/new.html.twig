{% extends 'base.html.twig' %}

{% block title %}New Team | SPIIN Sports{% endblock %}
{% block description %}Create a new team in the SPIIN Sports system{% endblock %}
{% block keywords %}new team, sports, management, SPIIN{% endblock %}

{% block body_class %}team-new-page{% endblock %}

{% block main %}
  <div class="page-title" data-aos="fade">
    <div class="heading">
      <div class="container">
        <div class="row d-flex justify-content-center text-center">
          <div class="col-lg-8">
            <h1>Create New Team</h1>
            <p class="mb-0">Add a new team to the system</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="container" data-aos="fade-up">
      {{ include('team/_form.html.twig') }}
      <a href="{{ path('app_team_index') }}" class="btn btn-outline-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Back to List
      </a>
    </div>
  </section>
{% endblock %}