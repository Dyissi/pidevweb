<div class="card shadow-sm">
  <div class="card-body">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
      <div class="row g-3">
        <div class="col-md-6">
          {{ form_label(form.teamName, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.teamName, {'attr': {'class': 'form-control'}}) }}
          <small class="form-text text-danger">
            {{ form_errors(form.teamName) }}
          </small>
        </div>
        <div class="col-md-6">
          {{ form_label(form.teamTypeOfSport, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.teamTypeOfSport, {'attr': {'class': 'form-select'}}) }}
          <small class="form-text text-danger">
            {{ form_errors(form.teamTypeOfSport) }}
          </small>
        </div>
        <div class="col-12 text-center mt-4">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> {{ button_label|default('Save') }}
          </button>
          <a href="{{ path('app_team_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
          </a>
        </div>
      </div>
    {{ form_end(form) }}
  </div>
</div>