{% extends 'baseB.html.twig' %}

{% block title %}Edit Claim Action{% endblock %}

{% block main %}
    <div class="container mt-4">
        <h2 class="mb-4">Edit Claim Action</h2>

        <div class="card">
            <div class="card-header bg-gradient-primary text-white">
                <h5 class="mb-0">Edit Claim Action Details</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        <h6 class="section-title">üìù Action & Claim Info</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.claim, {
                                    'label': 'Related Claim',
                                    'attr': {'class': 'form-select'}
                                }) }}
                                {{ form_row(form.claimActionStartDate, {
                                    'label': 'Start Date',
                                    'attr': {'class': 'form-control'}
                                }) }}
                                {{ form_row(form.claimActionEndDate, {
                                    'label': 'End Date',
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.claimActionType, {
                                    'label': 'Action Type',
                                    'attr': {'class': 'form-select'}
                                }) }}
                                {{ form_row(form.claimActionNotes, {
                                    'label': 'Notes',
                                    'attr': {
                                        'class': 'form-control',
                                        'rows': 5,
                                        'placeholder': 'Enter detailed notes here...'
                                    }
                                }) }}
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <a href="{{ path('app_claimaction_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back
                        </a>
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-save me-1"></i>Update
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
