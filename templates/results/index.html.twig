{% extends 'base.html.twig' %}

{% block title %}Results index{% endblock %}

{% block main %}
    <h1>Results index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>
                    <a href="{{ path('app_results_show', {'tournament': result.tournament}) }}">show</a>
                    <a href="{{ path('app_results_edit', {'tournament': result.tournament}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="1">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_results_new') }}">Create new</a>
{% endblock %}
